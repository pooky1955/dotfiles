    position top
    font pango:FiraCode Nerd Font,Economica, FontAwesome 14
    separator_symbol " - "

    status_command i3status | ./.config/i3/i3-keyboard-layout i3status | ~/.config/i3/show-gpu-used
    height 30
    colors {
        background          $bg
        statusline          $nord9
        separator           $nord7
        focused_workspace   $nord7 $bg $nord8
        active_workspace    $bg $bg $nord9
    }
}
